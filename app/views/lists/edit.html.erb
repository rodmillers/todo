<% content_for :title, "Edit Todo" %>

<div class="container py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 fw-bold mb-0">Edit Todo</h1>
    <div>
      <%= link_to "← Back to Todos", lists_path,
          class: "btn btn-outline-secondary rounded-pill px-4 shadow-sm me-2" %>
      <%= link_to "View Todo", @list,
          class: "btn btn-outline-primary rounded-pill px-4 shadow-sm" %>
    </div>
  </div>

  <!-- Form -->
  <%= render "form", list: @list %>
</div>

