<%= form_with(model: list, class: "card shadow-sm border-0 p-4 mx-auto w-50", style: "max-width: 600px; min-width: 320px;") do |form| %>
  <% if list.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h5 class="alert-heading mb-2">
        <%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:
      </h5>
      <ul class="mb-0">
        <% list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Description Field -->
  <div class="mb-3">
    <%= form.label :desc, "Description", class: "form-label fw-semibold" %>
    <%= form.text_field :desc, class: "form-control", placeholder: "Enter list description" %>
  </div>

  <!-- Complete Checkbox -->
  <div class="form-check mb-3">
    <%= form.check_box :complete, class: "form-check-input" %>
    <%= form.label :complete, "Mark as complete", class: "form-check-label" %>
  </div>

  <!-- Submit Button -->
  <div class="d-grid">
    <%= form.submit (list.persisted? ? "Update List" : "Create List"),
      class: "btn btn-primary btn-lg rounded-pill shadow-sm" %>
  </div>
<% end %>
