<div id="<%= dom_id(list) %>" class="card shadow-sm border-0 mb-3">
  <div class="card-body">
    <h5 class="card-title mb-3 text-primary fw-semibold">
      <%= list.desc.presence || "Untitled Todo" %>
    </h5>

    <p class="card-text mb-2">
      <strong>Status:</strong>
      <% if list.complete? %>
        <span class="badge bg-success ms-1">Complete</span>
      <% else %>
        <span class="badge bg-warning text-dark ms-1">In Progress</span>
      <% end %>
    </p>

    <div class="mt-3">
      <%= link_to "Edit", edit_list_path(list),
          class: "btn btn-outline-primary btn-sm rounded-pill me-2" %>
      <%= link_to "Delete", list,
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
          class: "btn btn-outline-danger btn-sm rounded-pill" %>
    </div>
  </div>
</div>
