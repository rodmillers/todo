<% content_for :title, "Todos" %>

<div class="container py-4">
  <!-- Flash notice -->
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 fw-bold">Todos</h1>
    <%= link_to "âž• New Todo", new_list_path, class: "btn btn-primary rounded-pill px-4 shadow-sm" %>
  </div>

  <!-- Lists -->
  <div id="lists" class="row g-3">
    <% @lists.each do |list| %>
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm border-0 h-100">
          <div class="card-body">
            <%= render list %>
            <div class="mt-3">
              <%= link_to "Show this Todo", list, class: "btn btn-outline-secondary btn-sm rounded-pill" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
