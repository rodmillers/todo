<% content_for :title, "View List" %>

<div class="container py-4">
  <!-- Flash notice -->
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <!-- List card -->
  <%= render @list %>

  <!-- Actions -->
  <div class="d-flex justify-content-end align-items-center gap-2 mt-3">
    <%= link_to "← Back to Lists", lists_path,
        class: "btn btn-outline-secondary rounded-pill px-4 shadow-sm" %>

    <%= link_to "✏️ Edit", edit_list_path(@list),
        class: "btn btn-outline-primary rounded-pill px-4 shadow-sm" %>

    <%= button_to "🗑️ Delete",
        @list,
        method: :delete,
        data: { turbo_confirm: "Are you sure you want to delete this list?" },
        class: "btn btn-danger rounded-pill px-4 shadow-sm" %>
  </div>
</div>

